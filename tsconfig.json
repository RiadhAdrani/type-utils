{
  "compilerOptions": {
    "target": "ES2016",
    "baseUrl": "src",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "lib": ["ESNext"],
    "moduleResolution": "node16",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
